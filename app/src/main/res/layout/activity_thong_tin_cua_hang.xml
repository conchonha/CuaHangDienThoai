<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:background="@drawable/hinhnen"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    app:title="Thông Tin Cửa hàng"
                    app:titleTextColor="#fff"
                    android:id="@+id/toolbargioithieu"
                    android:background="#3F51B5"
                    android:layout_height="?attr/actionBarSize">

                </androidx.appcompat.widget.Toolbar>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text=""
                    android:gravity="center"
                    android:layout_marginTop="100dp"
                    android:textColor="#F1F0F0"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:columnCount="2"
                android:padding="14dp"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true"
                android:layout_weight="8">
                <!--Row1-->
                <!--Colums 1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imggioithieu"
                            android:src="@drawable/vitri"
                            android:layout_height="80dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Giới Thiệu"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Colums 1-->
                <!--Row2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imgvitri"
                            android:src="@drawable/vitri"
                            android:layout_height="80dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Vị Trí"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Row2-->
                <!--Colum 1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/vitri"
                            android:id="@+id/imglienhe"
                            android:layout_height="80dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Liên Hệ"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Colum 2-->
                <!--Row2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/vitri"
                            android:id="@+id/imgfanbage"
                            android:layout_height="80dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Fanpage"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>